# Environment
NODE_ENV=development
PORT=3001

# Database (Supabase)
DATABASE_URL="postgresql://user:password@db.supabase.co:5432/postgres"
DATABASE_POOLER_URL="postgresql://user:password@db.supabase.co:6543/postgres?pgbouncer=true&connection_limit=20&pool_timeout=30"

# Supabase
SUPABASE_URL="https://your-project.supabase.co"
SUPABASE_ANON_KEY="your-anon-key"
SUPABASE_SERVICE_ROLE_KEY="your-service-role-key"

# JWT
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_REFRESH_SECRET="your-super-secret-refresh-key-change-this-in-production"
JWT_EXPIRES_IN="15m"
JWT_REFRESH_EXPIRES_IN="7d"

# Redis (Upstash)
UPSTASH_REDIS_REST_URL="https://your-redis.upstash.io"
UPSTASH_REDIS_REST_TOKEN="your-redis-token"

# Application
API_URL="http://localhost:3001"
FRONTEND_URL="http://localhost:3000"
ALLOWED_ORIGINS="http://localhost:3000,http://localhost:3001"

# Rate Limiting
RATE_LIMIT_ENABLED=true

# File Upload
MAX_FILE_SIZE_MB=10
ALLOWED_FILE_TYPES="image/jpeg,image/png,image/jpg,application/pdf"

# Email (Optional - Configure based on your provider)
EMAIL_FROM="noreply@yourdomain.com"
EMAIL_PROVIDER="sendgrid" # or "resend", "ses", etc.
EMAIL_API_KEY="your-email-api-key"

# Monitoring (Optional)
SENTRY_DSN=""
